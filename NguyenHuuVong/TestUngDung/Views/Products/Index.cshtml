@model IEnumerable<ModelEF.Model.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row mt-5">
        <div class="product-group">
            <div class="row">
                @foreach (var item in Model)
                {

                    <div class="col-md-3 col-sm-6 col-12">
                        <div class="card card-product mb-3">
                            <img class="card-img-top" width="300px" height="300px" src="https://www.muradvietnam.vn/@item.Image" alt="Card image cap">
                            <div class="card-body">
                                <h5 class="card-title">@Html.DisplayFor(modelItem => item.ProductName)</h5>
                                <h5 class="card-title">@Html.DisplayFor(modelItem => item.UnitCost) đ</h5>
                                <a href="/productInfo?id=@item.ProductID" class="btn btn-primary">Buy now</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

